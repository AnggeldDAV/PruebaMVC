@model IEnumerable<VistaGruposArtista>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreArtista)
            </th>
            <th>
                Foto
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArtista)
                </td>
                <td>
                    @if (item.Foto != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.Foto)" alt="Photo" style="max-width: 100px;" />
                    }
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>